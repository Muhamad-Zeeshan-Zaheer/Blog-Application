<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
   <%@articles.each do |article|%>

    <tr>
     
      <td><%=article.title%></td>
      <td><%=article.body%></td>
      <td><%=link_to "Edit Article", edit_article_path(article), class: "btn btn-warning"%></td>

    </tr>
    <%end%>
    
  </tbody>
</table>

